{
  "name": "server",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "dev": "concurrently --kill-others \"nodemon dist/index.js\" \"tsc -w\"",
    "start": "node dist/index.js",
    "postinstall": "npm run update",
    "watch-prisma": "nodemon --watch prisma/schema.prisma --exec prisma db push"
  },
  "dependencies": {
    "@prisma/client": "^3.14.0",
    "@types/graphql-fields": "^1.3.4",
    "apollo-server-express": "^3.7.0",
    "argon2": "^0.28.5",
    "class-validator": "^0.13.2",
    "connect-redis": "^6.1.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "graphql": "^15.3.0",
    "graphql-fields": "^2.0.3",
    "graphql-scalars": "^1.17.0",
    "ioredis": "^5.0.4",
    "pg": "^8.7.3",
    "prisma": "^3.14.0",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.4.0",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.3.6"
  },
  "devDependencies": {
    "@types/connect-redis": "^0.0.18",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/node": "^17.0.33",
    "concurrently": "^7.2.0",
    "nodemon": "^2.0.16",
    "typegraphql-prisma": "^0.20.3",
    "typescript": "^4.6.4"
  }
}
